<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/priority_navigation"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.huangliner.prioritytodo.presentation.ui.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_addTaskFragment"
            app:destination="@id/addTaskFragment" />
        <action
            android:id="@+id/action_homeFragment_to_updateFragment"
            app:destination="@id/updateFragment" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.huangliner.prioritytodo.presentation.ui.fragment.Login"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_login_to_addAccountFragment"
            app:destination="@id/addAccountFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.huangliner.prioritytodo.presentation.ui.fragment.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/taskListFragment"
        android:name="com.huangliner.prioritytodo.presentation.ui.fragment.TaskListFragment"
        android:label="fragment_task_list"
        tools:layout="@layout/fragment_task_list">
        <action
            android:id="@+id/action_taskListFragment_to_updateFragment"
            app:destination="@id/updateFragment" />
    </fragment>
    <fragment
        android:id="@+id/addTaskFragment"
        android:name="com.huangliner.prioritytodo.presentation.ui.fragment.AddTaskFragment"
        android:label="fragment_add_task"
        tools:layout="@layout/fragment_add_task" />
    <fragment
        android:id="@+id/addAccountFragment"
        android:name="com.huangliner.prioritytodo.presentation.ui.fragment.AddAccountFragment"
        android:label="fragment_add_account"
        tools:layout="@layout/fragment_add_account" />
    <fragment
        android:id="@+id/updateFragment"
        android:name="com.huangliner.prioritytodo.presentation.ui.fragment.UpdateFragment"
        android:label="UpdateFragment"
        tools:layout="@layout/fragment_update">
        <argument
            android:name="taskNo"
            app:argType="long"/>
    </fragment>
</navigation>