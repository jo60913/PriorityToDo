<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp">

        <TextView
            android:id="@+id/tv_add_task_clone_placeholder_title"
            style="@style/CustomTextViewTheme"
            app:layout_constraintBaseline_toBaselineOf="@+id/til_add_task_clone_placeholder_title_layout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_task_subtask_title" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_add_task_clone_placeholder_title_layout"
            app:endIconMode="clear_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="0.7"
            app:layout_constraintStart_toEndOf="@+id/tv_add_task_clone_placeholder_title"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="@string/add_task_subtask_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tie_add_task_clone_placeholder_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="26sp" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>